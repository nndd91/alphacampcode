<div class="col-lg-8 col-lg-offset-2">
<center><h1>Student List</h1></center>

<% @students.each do |gender, studentlist| %>
<h2><%= gender.capitalize =%> ( <%= studentlist.size %> )</h1>
  <table class="table table-striped">
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th></th>
      <th></th>
    </tr>
  <% studentlist.each do |x| %>
    <tr>
      <td> <%= x.id %> </td>
      <td> <%= x.firstname %> <%= x.lastname %> </td>
      <td> <%= link_to "Show", students_path + "/" + x.id.to_s %></td>
      <td> 
        <%= link_to "Delete", 
                    students_path(id: x.id), 
                    method: :delete, 
                    data: { 
                      confirm: "Deleting " + 
                              x.firstname + 
                              " " + 
                              x.lastname + 
                              "\n" + 
                              "Are you sure?" 
                          } %></td>
    </tr>
  <% end %>
  </table>
<% end %>
</div>
